# Copy this file to .env.local and fill in your values

# Contact Form SMTP Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_TO_EMAIL=contact@genrecai.com

# Blog Admin Credentials (Change these in production!)
NEXT_PUBLIC_ADMIN_USERNAME=genrecai
# Never expose passwords in public env vars - use server-side only
ADMIN_PASSWORD_HASH=hashed-password-here

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Vercel Analytics (Automatic on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry Error Tracking (Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# API Keys (If needed for future integrations)
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Database (For future blog persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/genrec_ai

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://genrecai.com
NEXT_PUBLIC_SITE_NAME=Genrec AI
