# Copy this file to .env.local and fill in your values

# Contact Form SMTP Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_TO_EMAIL=contact@genrecai.com

# Blog Admin Credentials (Change these in production!)
NEXT_PUBLIC_ADMIN_USERNAME=genrecai
# Never expose passwords in public env vars - use server-side only
ADMIN_PASSWORD_HASH=hashed-password-here

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Vercel Analytics (Automatic on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry Error Tracking (Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# API Keys (If needed for future integrations)
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Database (For future blog persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/genrec_ai

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://genrecai.com
NEXT_PUBLIC_SITE_NAME=Genrec AI

# Supabase S3 Storage Configuration
SUPABASE_S3_ENDPOINT=https://your-project-id.supabase.co/storage/v1/s3
SUPABASE_S3_REGION=ap-southeast-1
SUPABASE_S3_ACCESS_KEY_ID=your-access-key-id
SUPABASE_S3_SECRET_ACCESS_KEY=your-secret-access-key
SUPABASE_S3_BUCKET=gallery
SUPABASE_S3_FOLDER=gallery

# Supabase Storage Automation
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-service-role-key
SUPABASE_BUCKET=genrec_cms
SUPABASE_GALLERY_PATH=gallery
BACKLINK_ENDPOINT=https://genrecai.com/api/backlink
GALLERY_USED_IN_SITES=https://genrecai.com,https://tabble.ai
