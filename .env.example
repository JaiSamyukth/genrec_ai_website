# Email Configuration (Optional - uses file storage in development)
# Required for production email sending
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
CONTACT_EMAIL=contact@genrecai.com

# Analytics (Optional)
# Plausible Analytics (Self-hosted, privacy-first)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=genrecai.com
NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.io

# Google Analytics (With consent-based initialization via cookie banner)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Form Backup (Optional)
# Formspree can be used as a backup submission method
NEXT_PUBLIC_FORMSPREE_ID=your-formspree-id

# Demo Configuration
NEXT_PUBLIC_DEMO_URL=https://demo.genrecai.com

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_DEMO=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_MAINTENANCE_MODE=false
